<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopping_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="group4.tcss450.uw.edu.grocerypal450.fragment.ShoppingListFragment"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:weightSum="1">

        <AutoCompleteTextView
            android:layout_width="168dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:hint="@string/text_addIngredientsToList"
            android:textSize="14dp"
            android:completionThreshold="2"
            android:id="@+id/shopListEditTextSearch"
            android:layout_weight="0.94" />

        <Button
            android:text="@string/text_add"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/custombtnborder"
            android:id="@+id/shopListBtnAdd" />

        <Button
            android:text="@string/text_remove"
            android:textColor="@color/white"
            android:background="@drawable/custombtnborder"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/shopListBtnRemove" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:weightSum="1">

        <TextView
            android:text="@string/text_shopList"
            android:textColor="@color/black"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.99" />

        <Button
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:id="@+id/shopListBtnClear"
            android:background="@drawable/ic_close_black_48dp"/>
    </LinearLayout>


    <TextView
        android:maxLines="100"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:id="@+id/shopListTextView"
        android:layout_weight="0.56"
        android:textSize="16dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/text_load"
            android:textColor="@color/white"
            android:background="@drawable/custombtnborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopListBtnLoad"
            android:layout_weight="0.15" />

        <Button
            android:text="@string/text_save"
            android:textColor="@color/white"
            android:background="@drawable/custombtnborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopListBtnSave"
            android:layout_weight="0.15" />
    </LinearLayout>
</LinearLayout>
